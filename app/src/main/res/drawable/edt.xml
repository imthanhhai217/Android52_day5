<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="#A4A4A4" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="@color/white" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="@dimen/_6sdp"
        android:top="@dimen/_6sdp"
        android:right="@dimen/_6sdp"
        android:bottom="@dimen/_6sdp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="@dimen/_20ssp" >
    </corners>

</shape>